id: app-octoblu-sidebar-green-controller
kind: ReplicationController
apiVersion: v1beta1
labels:
  name: app-octoblu-sidebar-green
  version: "$SHORT_COMMIT"
desiredState:
  replicas: 2
  replicaSelector:
    name: app-octoblu-sidebar-green
    version: "$SHORT_COMMIT"
  podTemplate:
    labels:
      name: app-octoblu-sidebar-green
      app: app-octoblu-sidebar-green
      version: "$SHORT_COMMIT"
    desiredState:
      manifest:
        version: v1beta1
        id: app-octoblu-sidebar-green
        containers:
          - name: app-octoblu-sidebar-green
            image: octoblu/app-octoblu-sidebar:$SHORT_COMMIT
            ports:
              - containerPort: 80
